{% extends 'base.html.twig' %}

{% block title %}Login !{% endblock %}


{% block body %}

    <div class="container" style="text-align: center; padding: 20px; margin-top: 20px;">

        <h1>login page</h1>

        <form method="POST" action="{{ path('security.login') }}"/>

            <div>
                <label for="username">Email : </label>
                <input type="email" name="_username" id="username" class="form-control" />
            </div>

            <div>
                <label for="password">Password : </label>
                <input type="password" name="_password" id="password" class="form-control" />
            </div>

         <button type="submit" style="margin-top: 20px;" class="btn btn-primary">Se connecter</button>
        </form>

    </div>

{% endblock %}
